{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "./lib/",
        "sourceRoot": "./src/",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["dom","es7"],
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true
    },

    "exclude": [
        "node_modules"
    ]
}